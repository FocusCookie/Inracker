{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "inracker",
  "version": "0.1.1",
  "identifier": "com.inracker.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "inracker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/FocusCookie/Inracker/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ0MEEzMzU0MTZFQ0Y5OUQKUldTZCtld1dWRE1LMUNoZE41U0t4WmpIWDJIamlHRTluMUQrcWdNTFoxRGRJODM5OW9OZFhjMDIK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
